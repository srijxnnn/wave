{
  "name": "wave",
  "productName": "Wave",
  "version": "1.0.0",
  "description": "Wave is a lightweight, unofficial WhatsApp Web client for Linux built with Electron, focused on performance, security, and native desktop integration.",
  "license": "MIT",
  "author": "Srijan Dhak",
  "homepage": "https://github.com/srijxnnn/wave",
  "repository": {
    "type": "git",
    "url": "https://github.com/srijxnnn/wave.git"
  },
  "keywords": [
    "whatsapp",
    "electron",
    "linux",
    "desktop",
    "web-wrapper"
  ],
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "app.waveclient.desktop",
    "productName": "Wave",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  }
}
